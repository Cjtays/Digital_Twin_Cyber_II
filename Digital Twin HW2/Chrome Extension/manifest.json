{
    "manifest_version": 3,
    "name": "Read Text on Screen",
    "version": "1.0",
    "description": "A simple extension that reads and displays all text on the current page.",
    "permissions": [
      "activeTab", 
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }
  